	<authorEmail>oziogallery2@joomla.it</authorEmail>
	<authorUrl>www.joomla.it</authorUrl>
	<version>1.0</version>
	<description>OzioGallery 2 - Per Inserire Gallerie nei contenuti</description>
	<files>
		<filename plugin="ozio">ozio.php</filename>
	</files>
	<params>
		<param name="enabled" type="radio" default="1" label="Enable Plugin" description="PARAMENABLED">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="altezza" type="text" default="600" label="Altezza Frame" description="Altezza frame desc"/>
		<param name="larghezza" type="text" default="100%" label="Larghezza Frame" description="Larghezza frame desc"/>
		<param name="scroll" type="radio" default="no" label="ScrollBar" description="ScrollBar desc">
			<option value="no">No</option>
			<option value="yes">Yes</option>
		</param>		
	</params>
</install>
